!!!
%html
  %head
    %meta{charset: "utf-8"}/
    %meta{content: "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{content: "IE=edge", "http-equiv" => "X-UA-Compatible"}/
    %meta{content: "width=device-width, initial-scale=1.0, maximum-scale=1.0", name: "viewport"}/
    %title {% if page.title %}{{ page.title }} – {% endif %}{{ site.name }} – {{ site.description }}
    %meta{content: "{{ site.name }}", name: "author"}/
    %meta{content: "{{ site.description }}", name: "description"}/
    /[if lt IE 9]
      %script{ src: 'http://html5shiv.googlecode.com/svn/trunk/html5.js' }

    %link{href: "{{ site.baseurl }}/styles/site.css", rel: "stylesheet", type: "text/css"}/
  %body
    .wrapper-masthead
      .container
        %header.masthead.clearfix
          %a.site-avatar{href: "{{ site.baseurl }}/"}
            %img{src: "{{ site.avatar }}"}/
          .site-info
            %h1.site-name
              %a{href: "{{ site.baseurl }}/"} {{ site.name }}
            %p.site-description {{ site.description }}
          %nav
            %a{href: "{{ site.baseurl }}/"} Blog
            %a{href: "{{ site.baseurl }}/about"} About
    #main.container{role: "main"}
      {{ content }}

    .wrapper-footer
      .container
        %footer.footer
          {% include svg-icons.html %}
    {% include analytics.html %}